{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "strict": true,
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "stripInternal": true,
    "paths": {
      "@module": [
        "./src/index"
      ],
      "@module/*": [
        "./src/*"
      ]
    }
  },
  "include": ["src", "tests"]
}