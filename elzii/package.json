{
  "name": "elzii",
  "version": "0.1.0",
  "description": "Elizalina II runtime",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "jest",
    "format": "prettier --write src/ tests/",
    "type-check": "tsc --noEmit",
    "prepack": "npm run build"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "cjs",
      "esm"
    ],
    "dts": true,
    "splitting": false,
    "sourcemap": true,
    "minify": true,
    "clean": true
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "@module/(.*)": "<rootDir>/src/$1",
      "@module": "<rootDir>/src/index"
    },
    "setupFilesAfterEnv": [
      "jest-extended/all"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageReporters": [
      [
        "cobertura",
        {
          "file": "coverage.xml"
        }
      ]
    ]
  },
  "keywords": [],
  "author": "Louis DEVIE",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.5",
    "@types/rewire": "^2.5.30",
    "dayjs": "^1.11.10",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-extended": "^4.0.2",
    "moment": "^2.0.0",
    "prettier": "^3.2.4",
    "rewire": "^7.0.0",
    "ts-jest": "^29.1.2",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18"
  }
}
